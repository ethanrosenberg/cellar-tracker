<br>
<h1>My Wine Collection</h1>
<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Vintage</th>
      <th scope="col">Purchase Date</th>
      <th scope="col">Rating</th>
      <th scope="col">View/Edit Rating</th>
      <th scope="col">View/Edit Wine</th>
    </tr>
  </thead>
  <tbody>
    <% @wines.each do |wine| %>
    <tr>
      <th scope="row"><%= wine.id %></th>
      <td><%= wine.name %></td>
      <td><%= wine.vintage %></td>
      <td><%= UsersWine.find_date_purchased(wine, current_user) %></td>
      <td><%= Rating.find_by(user_id: current_user.id, wine_id: wine.id) %></td>

      <td><%= wine.ratings.where(user_id: current_user.id, wine_id: wine.id).inspect %></td>



    <td><%= link_to "View Rating", wine_rating_path(wine, Wine.find_rating(wine.id, current_user.id)) %></td>
    <td><%= link_to "View/Edit Wine", edit_wine_path(wine) %></td>


      <% end %>
  </tbody>
</table>
