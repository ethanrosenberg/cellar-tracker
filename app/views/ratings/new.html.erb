<%= form_for [@wine, @rating] do |f| %>

<div class="form-group">
  <label>Wine Name</label><br>
  <% wines_arr = Wine.all.map { |wine| [wine.name, wine.id] } %>
    <%= f.select :wine_id, options_for_select(wines_arr), include_blank: true, :prompt => 'Select Wine Name' %>
</div>
<div class="form-group">
  <label>Rating</label><br>
  <%= f.number_field :star %>
</div>

  <%= f.submit "Add New Rating", class:'btn btn-primary' %>
<% end %>
